@model ISP.ViewModels.PlanViewModels.PlanCreateViewModel

@{
    ViewBag.Title = "Edit Plan";
}

<div class="page-header">
    <h3>Edit the plan</h3>
</div>

@using (Html.BeginForm("UpdatePlan", "Plan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.PlanViewModel.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlanViewModel.Title, new { htmlAttributes = new { @class = "form-control pull-left" } })
                @Html.ValidationMessageFor(model => model.PlanViewModel.Title, "", new { @class = "create-edit-validation-error pull-left" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PlanViewModel.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlanViewModel.Cost, new { htmlAttributes = new { @class = "form-control pull-left" } })
                @Html.ValidationMessageFor(model => model.PlanViewModel.Cost, "", new { @class = "create-edit-validation-error pull-left" })
            </div>
        </div>

        @Html.HiddenFor(model => model.PlanViewModel.ServiceId)
        @Html.HiddenFor(model => model.PlanViewModel.Id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to list of plans", "GetPlansForAdmin", "Plan", new { serviceId = Model.ServiceId }, null)
</div>
