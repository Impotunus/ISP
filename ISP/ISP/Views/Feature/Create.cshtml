@model ISP.ViewModels.FeatureViewModels.FeatureCreateViewModel

@{
    ViewBag.Title = "Create";
}


<div class="page-header">
    <h3>Create new feature</h3>
</div>

@using (Html.BeginForm("Add", "Feature", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.FeatureViewModel.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureViewModel.Title, new { htmlAttributes = new { @class = "form-control pull-left" } })
                @Html.ValidationMessageFor(model => model.FeatureViewModel.Title, "", new { @class = "create-edit-validation-error pull-left" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FeatureViewModel.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FeatureViewModel.Description, new { htmlAttributes = new { @class = "form-control pull-left" } })
                @Html.ValidationMessageFor(model => model.FeatureViewModel.Description, "", new { @class = "create-edit-validation-error pull-left" })
            </div>
        </div>
        
        @Html.HiddenFor(t => t.PlanId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to list of features", "Index", "Feature", new { planId = Model.PlanId }, null)
</div>
